<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgrnd"
    tools:context=".activity.MainActivity">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_backgrnd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_margin"
            android:orientation="vertical"
            android:padding="@dimen/global_padding">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:padding="@dimen/global_padding"
                        android:text="Introduction"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/head_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/divider_white" />

                    <TextView
                        android:id="@+id/intro_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="@dimen/padding_left"
                        android:text="@string/intro_ug"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_cse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="#FFFFFF"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:text="CSE"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/head_text" />

                        <Button
                            android:id="@+id/b_cse"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24px" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_cse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="5dp"
                        android:text="@string/ug_cse"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_ece"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="#FFFFFF"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:text="ECE"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/head_text" />

                        <Button
                            android:id="@+id/b_ece"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24px" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_ece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="5dp"
                        android:text="@string/ug_ece"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <Button
                            android:id="@+id/btn_cce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="#FFFFFF"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:text="CCE"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/head_text" />

                        <Button
                            android:id="@+id/b_cce"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24px" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_cce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="5dp"
                        android:text="@string/ug_cce"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_mme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="#FFFFFF"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:text="Mechatronics Engineering"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/head_text" />

                        <Button
                            android:id="@+id/b_mme"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24px" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_mech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="5dp"
                        android:text="@string/ug_mme"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="#FFFFFF"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:text="Mechanical Engineering"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/head_text" />

                        <Button
                            android:id="@+id/b_me"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24px" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:paddingLeft="5dp"
                        android:text="@string/ug_me"
                        android:textSize="@dimen/norml_text" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.NestedScrollView>
